<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/medium_margin"
                                    android:background="?attr/selectableItemBackground"
                                    card_view:cardCornerRadius="@dimen/medium_margin"
                                    card_view:cardElevation="4dp"
                                    card_view:cardMaxElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:textSize="@dimen/textSize_l"
            android:textStyle="bold"
            tools:text="Repository/Name"/>

        <TextView
            android:id="@+id/repository_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_name"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:textSize="@dimen/textSize_s"
            tools:text="Repository Description"/>

        <TextView
            android:id="@+id/repository_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_description"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="@dimen/small_margin"
            android:gravity="center"
            android:textSize="@dimen/textSize_xs"
            android:textStyle="bold"
            tools:text="34.8k"/>

        <TextView
            android:id="@+id/repository_forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_description"
            android:layout_margin="@dimen/medium_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_toRightOf="@id/repository_stars"
            android:drawableLeft="@drawable/ic_github_fork"
            android:drawablePadding="@dimen/small_margin"
            android:gravity="center"
            android:textSize="@dimen/textSize_xs"
            android:textStyle="bold"
            tools:text="1180"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_1"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"/>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_2"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_1"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_1"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_3"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_2"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_2"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_4"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_3"/>

        <ProgressBar
            android:id="@+id/progressBar4"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_3"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_5"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_4"/>

        <ProgressBar
            android:id="@+id/progressBar5"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_4"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repository_contributor_avatar_6"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_5"/>

        <ProgressBar
            android:id="@+id/progressBar6"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_below="@id/repository_stars"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toRightOf="@id/repository_contributor_avatar_5"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
